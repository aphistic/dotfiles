[vars]
first-screen = DVI-I-1
second-screen = HDMI-0
third-screen = DVI-D-0
fourth-screen =

eth-adapter = enp0s31f6

font-0 = Source Code Pro:size=9;0

[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/first]
monitor = ${vars.first-screen}
width = 100%
height = 20

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = ${vars.font-0}

line-size = 1
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

modules-left = i3
modules-right = filesystem volume cpu memory eth date

tray-position = right
tray-padding = 2

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

