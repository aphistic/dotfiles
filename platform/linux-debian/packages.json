{
	"install_cmd": "sudo apt-get install -y {{packages}}",
	"packages": [
		"coreutils",
		"grc",
		"zsh",
		"git",
		"rxvt-unicode",
		"scrot",
		"imagemagick",
		"ctags",
		"sysstat"
	],
	"build": [
		{
			"check_file": "/usr/local/bin/i3blocks",
			"commands": [
				"olddir=`pwd`",
				"git clone git://github.com/vivien/i3blocks /tmp/i3blocks",
				"cd /tmp/i3blocks",
				"make clean all",
				"sudo make install",
				"cd $olddir",
				"rm -rf /tmp/i3blocks"
			]
		}
	]
}
