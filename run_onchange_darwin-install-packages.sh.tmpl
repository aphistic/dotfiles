{{ if eq .chezmoi.os "darwin" -}}
#!/bin/bash

brew bundle --file=/dev/stdin <<EOF
{{ range .packages.darwin.brews -}}
brew {{ .name | quote }}
{{ end -}}
{{ range .packages.darwin.casks -}}
cask {{ .name | quote }}
{{ end -}}
EOF

{{ range .packages.darwin.cargo -}}
cargo install {{ .name | quote }} --locked
{{ end -}}
{{ end -}}